<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hss01248.dialogutildemo">
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:name=".BaseApp"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity" android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".BadTokenActy"/>
        <activity android:name=".BadTokenAfterActy"/>
        <activity android:name=".BadTokenBeforeActy"/>
        <activity android:name="com.hss01248.dialog.view.DialogUtil_DialogActivity"
            android:theme="@style/dialogutil_dialog_activity_style"
            android:windowSoftInputMode="adjustResize"
            android:configChanges="keyboard|keyboardHidden|screenSize"/>
    </application>

</manifest>